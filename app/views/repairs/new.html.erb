<div align="center"><h3>Create a new repair order</h3></div>

<%= form_for @repair do |f| %>
	<div class="col-md-4">
		<div class="form-group">
			<%= f.label "Service adviser notes" %>
			<%= f.text_field :description, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :estimate %>
			<%= f.text_field :estimate, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label :total %>
			<%= f.text_field :total, class: "form-control"  %>
		</div>

		<div class="form-group">
			<%= f.label "Assign Tech:" %>
			<%= f.collection_select :tech_id, Tech.all, :id, :fullname, class: "form-control"  %>
		</div>

		<%= f.submit "New repair order" %>
	</div>
<% end %> 