<div align="center"><h3>Create a new repair order</h3></div>

<%= form_for @repair do |f| %>

	<%= f.fields_for :customer do |c| %>
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-6">
				<%= c.label "Customer first name" %>
				<%= c.text_field :firstname %>
			</div>

			<div class="col-md-6">
				<%= c.label "Customer last name" %>
				<%= c.text_field :lastname %>
			</div>
		</div>

		<div class="row">
			<div class="col-md-6">
				<%= c.label "Customer Email" %>
				<%= c.text_field :email %>
			</div>

			<div class="col-md-6">
				<%= c.label "Customer Phone Number" %>
				<%= c.text_field :phone %>
			</div>
		</div>
	</div>
	<% end %>

	<%= f.fields_for :car do |v| %>
	<div class="container-fluid">
	    <div class="row">
	        <div class="col-md-3">
	        	<%= v.label "Year" %>
	        	<%= v.text_field :year %>
	        </div>

	        <div class="col-md-3">
	        	<%= v.label "Make" %>
	        	<%= v.text_field :make %>	        	
	        </div>

	        <div class="col-md-3">
	        	<%= v.label "Model" %>
	        	<%= v.text_field :model %>	        	
	        </div>

	        <div class="col-md-3">
	        	<%= v.label "Color" %>
	        	<%= v.text_field :color %>
	        </div>
	    </div>

	    <div class="row">
	        <div class="col-md-3">
	        	<%= v.label "VIN" %>
	        	<%= v.text_field :vin %>
	        </div>

	        <div class="col-md-3">
	        	<%= v.label "Body Style" %>
	        	<%= v.text_field :bodystyle %>	        	
	        </div>

	        <div class="col-md-3">
	        	<%= v.label "Mileage in" %>
	        	<%= v.text_field :mileagein %>	        	
	        </div>

	        <div class="col-md-3">
	        	<%= v.label "Mileage out" %>
	        	<%= v.text_field :mileageout %>
	        </div>
	    </div>
	    
	</div>
	<% end %>

	<div class="col-md-4">
		<div class="form-group">
			<%= f.label "Service advisor notes" %>
			<%= f.text_area :advisornotes, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label "Total Estimate" %>
			<%= f.text_field :totalestimate, class: "form-control" %>
		</div>

		<div class="form-group">
			<%= f.label "Actual Total" %>
			<%= f.text_field :actualtotal, class: "form-control"  %>
		</div>

		<div class="form-group">
			<%= f.label "Assign Tech:" %>
			<%= f.collection_select :tech_id, Tech.all, :id, :fullname, class: "form-control"  %>
		</div>

		<%= f.submit "New repair order" %>
	</div>
<% end %> 