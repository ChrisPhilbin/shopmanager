<% title "Viewing all my cars" %>

<% if @cars.empty? %>

	<div align="center">
		<h3>Looks like you don't have any cars entered yet!</h3>
		<h3>Enter a new car here</h3>
	<div>

<% else %>

	<% @cars.each do |car| %>
	<div class="row">
		<div class="col-md-6">
			<%= car.ymm %><br />
		</div>

		<div class="col-md-6">
			<%= link_to "Edit this car", edit_customer_car_path(current_customer.id, car) %>
		</div>
	<% end %>

<% end %>