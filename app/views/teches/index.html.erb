<% title "Displaying all technicians" %>

<div align="center"><h3>Listing all technicians</h3></div>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Tech id</th>
      <th scope="col">Tech name</th>
      <th scope="col">View all repairs by tech</th>
      <th scope="col">View all customers tech has serviced</th>
      <th scope="col">Edit Tech details</th>
    </tr>
  </thead>
  <tbody>
    <% @techs.each do |tech| %>
    <tr>
      <th scope="row"><%= tech.id %></th>
      <td><%= tech.fullname %></td>
      <td><%= link_to "View repairs by #{tech.firstname}", tech_repairs_path(tech) %></td>
      <td><%= link_to "View customers", tech_customers_path(tech) %></td>
      <td>Edit</td>
    </tr>
    <% end %>
  </tbody>
</table>